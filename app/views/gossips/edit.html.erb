<div class="container mt-5">
  <h1 class="mb-4">Éditer le Gossip</h1>
  <%= form_tag gossip_path(@gossip), method: :patch do %>
    <div class="form-group">
      <%= label_tag :title, "Titre du Gossip" %>
      <%= text_field_tag 'gossip[title]', @gossip.title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :description, "Description du Gossip" %>
      <%= text_area_tag 'gossip[description]', @gossip.description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :user_id, "ID de l'utilisateur" %>
      <%= text_field_tag 'gossip[user_id]', @gossip.user_id, class: 'form-control' %>
    </div>
    <%= submit_tag "Éditer le Gossip", class: 'btn btn-primary' %>
  <% end %>
</div>
