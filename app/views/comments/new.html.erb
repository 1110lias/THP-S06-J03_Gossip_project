<body>
  <% if flash[:danger] %>
    <div class="alert alert-danger">
      <%= flash[:danger] %>
    </div>
  <% end %>

  <%= form_tag gossip_comments_path(@gossip) do %>
    <div class="form-group">
      <%= label_tag :user_id, "User ID" %>
      <%= text_field_tag 'comment[user_id]', nil, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :content, "Contenu du Commentaire" %>
      <%= text_area_tag 'comment[content]', nil, class: 'form-control' %>
    </div>

    <%= hidden_field_tag 'comment[gossip_id]', @gossip.id %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <%= submit_tag "Commenter", class: 'btn btn-primary' %>
  <% end %>
</body>
